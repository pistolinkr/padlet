rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // 사용자 프로필 이미지
    match /users/{userId}/profile/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 보드 배경 이미지
    match /boards/{boardId}/backgrounds/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        // 보드 소유자 또는 멤버인지 확인
        (request.auth.uid == resource.metadata.ownerId || 
         request.auth.uid in resource.metadata.members);
    }
    
    // 노트 이미지
    match /boards/{boardId}/notes/{noteId}/images/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        // 노트 소유자 또는 보드 멤버인지 확인
        (request.auth.uid == resource.metadata.ownerId || 
         request.auth.uid in resource.metadata.boardMembers);
    }
    
    // 기타 파일은 인증된 사용자만 접근
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
} 